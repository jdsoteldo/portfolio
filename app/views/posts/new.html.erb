<%= form_for [current_user, @post] do |f| %>
<div class="new-post-form">
  <div class="title-div">
    <%= f.label "Title of your Post", class: "title-label" %><br>
    <%= f.text_field :title, required: true, class: "post-title" %>
  </div>
  <div class="content-div">
    <%= f.label "Describe your post", class: "content-label" %><br>
    <%= f.text_area :content, required: true, class: "post-content" %>
  </div>
  <%= f.file_field :image, multiple: true, direct_upload: true, required: false, class: "submit-files choose-file" %><br>
  <%= f.submit 'Submit your Post', class: "submit-post" %>
</div>
<% end %>
